<section>
  <h2>List of Users</h2>
  <button type="button" class="btn btn-info">
    <%= link_to "Create A Post", new_post_path(current_user.id) , class: "new-post-link" %>
  </button>
  <div class="card mt-5">
    <div class="card-body">
      <ul class="users">
        <%@users.each do |user|%>
          <li class="users-list">
            <a href='/users/<%= user.id %>'>
              <%= render 'shared/user', user:user %>
            </a>
          </li>
        <%end%>
      </ul>
    </div>
  </div>
</section>